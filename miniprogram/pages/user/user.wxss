/* pages/user/user.wxss */
.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 500rpx;
  display: flex;
  justify-content: center;
  /* padding-top: 40rpx; */
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  
  
}
.bg-img{
  height:500px;
}
.bigImg{
  width: 100%;
  height: 100%;
}
.png{
  border-radius: 50%;
  display: block;
  overflow:hidden
}
.Textpng{
  font-size: 30rpx;
  font-weight: bold;
  line-height: 90rpx
}
.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
.arrowStyle{
  font-size: 30rpx;
  font-weight: bold;
  color: red
}
map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}
.fontBai{
  font-weight: bold;
  font-size: 30rpx;
  color: #333
}
.cv-ct-canvas {
  position: absolute;
  left: 800rpx;
  width: 300px;
  height: 500px;
}